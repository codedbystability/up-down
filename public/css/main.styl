		&.btc
			color $btc
		&.eth
			color $eth
		&.bnb
			color $bnb
		&.sol
			color $sol
		&.xrp
			color $xrp
		&.ada
			color $ada
		&.doge
			color $doge
		&.ltc
			color $ltc
	&__frame
		position relative
		width 100%
		background-color transparent
	&__live
		display inline-flex
		flex-direction row
		justify-content center
		align-items center
		margin-bottom 24px
		svg
			width 24px
			height 24px
			margin-right 8px
		span
			font-size 18px
			line-height 24px
			color $grey
			font-weight 700
	&__counter
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 60px
		height 60px
		border-radius 50%
		background-color $grey
		border 2px solid rgba(#CAD1DD, .24)
		margin-top 24px
		span
			font-size 24px
			font-weight 800
			color $white
	&__stat
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		padding 16px 0
		flex-wrap wrap
		gap 24px
		button
			font-size 16px
			font-weight 500
			color $grey
			text-align center
	&--apioption
		min-height auto
		justify-content flex-start
		.game__pair
			margin-bottom 16px
	@media (min-width: 768px)
		min-height calc(100dvh - 244px)
		&__title
			font-size 20px
			line-height 28px
			margin-bottom 24px
		&__coin
			font-size 20px
			line-height 30px
			img
				width 30px
				height 30px
		&__price
			font-size 64px
			line-height 70px
			height 70px
			span
				font-size 40px
		&__time
			font-size 16px
			line-height 24px
			margin-bottom 24px
		&__live
			margin-bottom 48px
			svg
				width 32px
				height 32px
			span
				font-size 24px
				line-height 32px
		&__counter
			width 80px
			height 80px
			margin-top 48px
			span
				font-size 36px
		&--apioption
			min-height auto
	@media (min-width: 1200px)
		&__pair
		&__stat
			display none
	@media (min-width: 1400px)
		min-height calc(100dvh - 260px)
		&--apioption
			min-height auto
	@media (min-width: 1900px)
		min-height calc(100dvh - 276px)
		justify-content flex-start
		&--apioption
			min-height auto

