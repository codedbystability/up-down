	&__head
		display flex
		flex-direction column
		justify-content flex-start
		align-items center
		width 100%
		margin-bottom 24px
	&__title
		font-size 18px
		line-height 26px
		color $white
		text-align center
		font-weight 400
		margin-bottom 16px
		width 100%
		b
			font-weight 700
		&:last-child
			margin-bottom 0
	&__coin
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		font-size 16px
		line-height 24px
		color $white
		text-align center
		font-weight 600
		margin-bottom 10px
		img
			width 24px
			height 24px
			margin-right 8px
		&:last-child
			margin-bottom 0
		&.btc
			color $btc
		&.eth
			color $eth
		&.bnb
			color $bnb
		&.sol
			color $sol
		&.xrp
			color $xrp
		&.ada
			color $ada
		&.doge
			color $doge
		&.ltc
			color $ltc
	&__price
