/*==============================
	Game
==============================*/
.game
	display flex
	flex-direction column
	justify-content space-between
	align-items center
	width 100%
	min-height calc(100dvh - 196px)
	position relative
	&__pair
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		width 100%
		height 60px
		padding 0 8px
		margin-bottom 24px
		border-radius 8px
		border 1px solid transparent
		&.btc
			background linear-gradient(90deg, rgba($btc, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($btc, .24)
			.game__pair-coin
				svg
					fill $btc
		&.eth
			background linear-gradient(90deg, rgba($eth, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($eth, .24)
			.game__pair-coin
				svg
					fill $eth
		&.bnb
			background linear-gradient(90deg, rgba($bnb, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($bnb, .24)
			.game__pair-coin
				svg
					fill $bnb
		&.sol
			background linear-gradient(90deg, rgba($sol, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($sol, .24)
			.game__pair-coin
				svg
					fill $sol
		&.xrp
			background linear-gradient(90deg, rgba($xrp, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($xrp, .24)
			.game__pair-coin
				svg
					fill $xrp
		&.ada
			background linear-gradient(90deg, rgba($ada, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($ada, .24)
			.game__pair-coin
				svg
					fill $ada
		&.doge
			background linear-gradient(90deg, rgba($doge, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($doge, .24)
			.game__pair-coin
				svg
					fill $doge
		&.ltc
			background linear-gradient(90deg, rgba($ltc, .24) 0%, rgba($bg, 0) 100%)
			border-color rgba($ltc, .24)
			.game__pair-coin
				svg
					fill $ltc
	&__pair-coin
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		img
			width 24px
			height 24px
			margin-right 4px
		span
			display flex
