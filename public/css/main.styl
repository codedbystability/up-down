	&__lang-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 20px
		height 20px
		img
			width 20px
			height 20px
			border-radius 50%
	&__lang-menu
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 160px
		background-color $bg2
		padding 16px
		border-radius 8px
		a
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			margin-bottom 16px
			font-size 14px
			line-height 24px
			font-weight 500
			color $white
			&:last-child
				margin-bottom 0
			img
				width 20px
				height 20px
				border-radius 50%
				margin-right 8px
			&:hover
				color $blue
			&.active
				color $blue
	&__btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 24px
		height 24px
		svg
			width 24px
			height auto
			fill $grey
		&--active
			svg
				fill $white
	@media (min-width: 768px)
		padding 30px 0
		&__content
			justify-content flex-start
		&__logo
			height 48px
		&__drop
			padding-left 56px
			margin-left 30px
			img
				display block
			p
				font-size 20px
				line-height 24px
		&__drop-btn
			line-height 24px
			font-size 16px
		&__actions
			display flex
		&__action
			width 24px
			height 24px
			margin-right 16px
			&:last-child
				margin-right 0
			svg
				width 24px
				height 24px
		&__lang
			margin-right 16px
		&__lang-btn
			width 24px
			height 24px
			img
				width 24px
				height 24px
		&__btn
			display none
	@media (min-width: 1400px)
		&__logo
			height 64px
			margin-right 30px
		&__drop
			p
				font-size 24px
	@media (min-width: 1900px)
		&__logo
			height 80px
		&__action
			width 32px
			height 32px
			margin-right 24px
			&:last-child
				margin-right 0
			svg
				width 32px
				height 32px
		&__lang
			margin-right 24px
		&__lang-btn
			width 32px
			height 32px
			img
				width 32px
				height 32px

